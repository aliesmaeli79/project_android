<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".book_page">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="#076e8d"/>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center|left">

        <ImageView
            android:id="@+id/back"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_below="@id/linear1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:gravity="right">
                <TextView
                    android:id="@+id/text_name_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:fontFamily="@font/lalezar"
                    android:text="باراک اواما"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textSize="18dp"
                    android:fontFamily="@font/mirtabold"
                    android:text="خاله سوسکه"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:fontFamily="@font/mirtabold"
                    android:textSize="20dp"
                    android:text="اثری از: "/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textSize="25sp"
                    android:fontFamily="@font/mirtabold"
                    android:text="تاریخی"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:fontFamily="@font/mirtabold"
                    android:textSize="25sp"
                    android:text="ژانر: "/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:fontFamily="@font/mirtabold"
                    android:textSize="25sp"
                    android:text="قیمت : "/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:id="@+id/text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#E91E63"
                    android:textSize="25sp"
                    android:fontFamily="@font/lalezar"
                    android:text="20,000 تومان"/>
            </LinearLayout>

            <RatingBar
                android:id="@+id/rating_bar_book"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:progressTint="#FFC107"
                android:maxHeight="25sp"
                android:minHeight="25sp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

            </LinearLayout>


        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="10sp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="20dp"
                    android:layout_height="270dp">
                    <ImageView
                        android:id="@+id/image_book_page"
                        android:layout_width="match_parent"
                        android:layout_height="270dp"
                        android:scaleType="fitXY"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingRight="20dp"
        android:paddingLeft="30dp"
        android:paddingTop="20dp"
        android:layout_below="@id/linear2"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_sigin"
            android:fontFamily="@font/lalezar"
            android:minWidth="80dp"
            android:minHeight="38dp"
            android:textSize="22dp"
            android:text="نشان کردن"
            android:textColor="#000" />
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_download"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_login"
            android:fontFamily="@font/lalezar"
            android:minWidth="80dp"
            android:minHeight="38dp"
            android:textSize="22dp"
            android:text="دریافت کتاب"
            android:textColor="#fff" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:layout_below="@id/linear3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:paddingRight="25sp"
            android:textColor="#000"
            android:fontFamily="@font/lalezar"
            android:text="درباره کتاب : "/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="@color/teal_700"
            android:layout_margin="10sp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp">
            <TextView
                android:id="@+id/text_book"
                android:layout_width="match_parent"
                android:textColor="#000"
                android:paddingRight="10sp"
                android:fontFamily="@font/mirtabold"
                android:textSize="20dp"
                android:layout_height="wrap_content"/>
            </ScrollView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>