<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:cardCornerRadius="10sp"
    app:cardBackgroundColor="#4593aa"
    >
    <LinearLayout
        android:id="@+id/linear_book"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name_book"
                android:layout_width="match_parent"
                android:textColor="#000"
                android:gravity="right"
                android:fontFamily="@font/lalezar"
                android:textSize="20dp"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_gravity="right"
                android:layout_height="1dp"
                android:background="#000"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/writer_book"
                    android:layout_width="wrap_content"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:paddingRight="5dp"
                    android:fontFamily="@font/mirtabold"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="نویسنده :"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:fontFamily="@font/lalezar"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/price_book"
                    android:layout_width="wrap_content"
                    android:paddingRight="5dp"
                    android:fontFamily="@font/lalezar"
                    android:textColor="#E91E63"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"/>
                <TextView

                    android:layout_width="wrap_content"
                    android:text="قیمت کتاب :"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:fontFamily="@font/lalezar"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="right"
                android:paddingTop="10sp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_download"
                    android:layout_width="wrap_content"
                    android:text="دانلود سریع"
                    android:background="@drawable/button_login"
                    android:fontFamily="@font/lalezar"
                    android:layout_height="40dp"/>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content">
                <RatingBar
                    android:id="@+id/rating_bar"
                    android:layout_width="wrap_content"
                    android:progressTint="#FFC107"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:secondaryProgressTint="#FFC107"
                    android:numStars="5"

                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_marginRight="20dp"
            android:layout_margin="7dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="10sp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_book"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>


</RelativeLayout>